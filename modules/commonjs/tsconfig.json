{
  "compileOnSave": true,
  "compilerOptions": {
    "jsx": "react",
    "module": "CommonJS",
    "target": "es6",
    "outDir": "./dist/",
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noErrorTruncation": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    // For TypeORM entity column typing
    "strictPropertyInitialization": false,
  }
}
